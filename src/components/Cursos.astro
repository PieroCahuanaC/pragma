---
const response = await fetch("http://localhost:5000/api/curso");
const data = await response.json();
const cursos = data.curso || [];
---

<div class="p-11">
  <h2 class="text-3xl font-bold font-sans mb-4 text-center mt-12">
    Lista de Cursos
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    {
      cursos.map((curso) => (
        <div class="bg-white p-6 rounded-lg shadow-md border border-gray-300 text-center">
          <h3 class="text-xl font-bold">{curso.titulo}</h3>
          <img
            src="./curso.png"
            alt="Astro Logo"
            class="h-24 w-auto mt-2 mx-auto"
          />
          <h3>
            Estado: {curso.estado} Instructor: {curso.id_instructor}
          </h3>
        </div>
      ))
    }
  </div>
</div>
