---
const response = await fetch("http://localhost:5000/api/instructores");
const data = await response.json();
const instructores = data.instructores;
---

<div class="p-11">
  <h2 class="text-3xl font-bold font-sans mb-4 text-center mt-12">
    Lista de Instructores
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    {
      instructores.map((instructor) => (
        <div class="bg-white p-6 rounded-lg shadow-md border border-gray-300 text-center">
          <h3 class="text-xl font-bold">
            {instructor.nombre} {instructor.apellido}
          </h3>
          <p class="text-gray-600">{instructor.email}</p>
        </div>
      ))
    }
  </div>
</div>
